menu	"UDHCP - DHCP client and server"
config UDHCP
	bool
   default n
	prompt "Compile udhcp"
   help
      The udhcp server/client package is a small DHCP client and server
      primarily geared towards embedded systems. It does however, strive 
      to be fully functional, and RFC compliant.
     
      See http://udhcp.busybox.net for details

config UDHCP_CLIENT
	bool
   default n
	prompt "udhcp client"
   help
      Select yes to install the client

config UDHCP_SERVER
	bool
   default n
	prompt "udhcp server"
   help
      Select yes to install the server

endmenu
