menu	"Boundary Devices Stuff"

config BDSCRIPT
	bool
	prompt "Compile Boundary Devices Scripting Environment"
   default y
   help 
   This module provides scripting extensions based on the 
   Mozilla the SpiderMonkey Javascript Interpreter

   See http://BoundaryDevices.com/javascript.shtml for details

config BDSCRIPT_CVS
	bool
	prompt "Retrieve from CVS"
   default y
   help 
   Use this to access the latest from Boundary Devies

choice
   prompt "Application(s) "
      default BDSCRIPT_BIGDEMO
      
      config BDSCRIPT_BIGDEMO
      	bool
      	prompt "Big demo scripts"
         default y
         help 
         This selection includes all sample scripts
      
      config SUITEDEMO
         bool
         prompt "Suite Controller Demo (No Server)"
      
endchoice

endmenu
